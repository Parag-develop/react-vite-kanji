{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  
  "routes": [
    {
      "rewrites": [
        { "source": "/(.*)", "destination": "/" }
      ]
    },
    {
      "src": "/api/(.*)",
      "dest": "https://kanji-backend-3fvs.vercel.app" 
      
    },
    {
      "src": "/(.*)",
      "dest": "/" 
    }
  ]
}